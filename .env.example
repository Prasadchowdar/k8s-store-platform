# Platform Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database
DB_PATH=./data/platform.db

# Kubernetes
STORE_DOMAIN=store.127.0.0.1.nip.io
PLATFORM_DOMAIN=platform.127.0.0.1.nip.io
INGRESS_CLASS=nginx

# Provisioning
PROVISIONING_CONCURRENCY=3
WOOCOMMERCE_INIT_TIMEOUT=300
MYSQL_IMAGE=mysql:8.0
WORDPRESS_IMAGE=wordpress-store:latest
IMAGE_PULL_POLICY=IfNotPresent
EXTERNAL_PORT=

# Resource Defaults
MYSQL_STORAGE_SIZE=1Gi
WORDPRESS_STORAGE_SIZE=1Gi
